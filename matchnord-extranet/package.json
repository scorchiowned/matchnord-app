        "prisma": "^5.7.1",
        "ts-node": "^10.9.2",
        "tsx": "^4.20.5",
        "typescript": "^5",
        "vite-tsconfig-paths": "^4.2.2",
        "vitest": "^1.1.0"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.{json,css,scss,md}": [
            "prettier --write"
        ]
    },
    "prisma": {
        "seed": "npx tsx prisma/seed.ts"
    }
}