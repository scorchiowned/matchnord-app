        "@tanstack/react-query": "^5.17.0",
        "@tanstack/react-virtual": "^3.0.1",
        "autoprefixer": "^10.0.1",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.0.0",
        "cmdk": "^0.2.0",
        "date-fns": "^3.0.6",
        "dotenv": "^17.2.2",
        "lucide-react": "^0.300.0",
        "next": "14.0.4",
        "next-auth": "^4.24.5",
