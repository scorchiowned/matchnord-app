{
    "name": "tournament-app",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "eslint .",
        "typecheck": "tsc --noEmit",
        "test": "vitest --run",
        "e2e": "npx playwright test e2e/tournaments/tournament-management.spec.ts --project=chromium --reporter=list --workers=1",
        "e2e:email": "npx playwright test e2e/email/email-system.spec.ts --project=chromium --reporter=list",
        "e2e:ui": "playwright test --ui",
        "e2e:headed": "playwright test --headed",
        "e2e:debug": "playwright test --debug",
        "e2e:report": "playwright show-report",
        "e2e:install": "playwright install",
        "prisma:migrate": "prisma migrate dev",
        "prisma:deploy": "prisma migrate deploy",
        "prisma:generate": "prisma generate",
        "deploy": "./deploy-local.sh",
        "deploy:quick": "./deploy-simple.sh",
        "deploy:now": "./deploy-now.sh",
        "prisma:seed": "npx tsx prisma/seed.ts",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "db:up": "docker-compose up -d postgres",
        "db:down": "docker-compose down",
        "db:reset": "docker-compose down -v && docker-compose up -d postgres",
        "db:logs": "docker-compose logs -f postgres",
        "test:db:up": "docker-compose --profile test up -d postgres_test",
        "test:db:down": "docker-compose --profile test down",
        "setup": "./scripts/dev-setup.sh"
    },
    "dependencies": {
        "@auth/prisma-adapter": "^1.0.12",
        "@azure/storage-blob": "^12.27.0",
        "@hookform/resolvers": "^3.3.2",
